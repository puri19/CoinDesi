# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Set minimum iOS version to match your simulator (iOS 18.5)
# We'll use iOS 16.0 as minimum for better compatibility
platform :ios, '16.0'
prepare_react_native_project!

# Fix for M2/M3 Mac compatibility
def common_pods
  # Add any common pods here if needed
end

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'CoinDesi' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  common_pods

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Fix for Xcode 15+ and iOS 18.5 compatibility
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Set deployment target to iOS 16.0 for better compatibility
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
        
        # M2/M3 Mac optimization - no need to exclude arm64 for modern targets
        # Only exclude for very specific problematic targets
        if target.name.include?('Flipper') || target.name.include?('RCT-Folly')
          # For iOS 18.5 simulator, we might need to handle this differently
          if config.build_settings['SDKROOT'] == 'iphonesimulator'
            # Only exclude arm64 for problematic targets on simulator
            config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
          end
        end
        
        # Enable arm64 for iOS simulator on M2/M3 Macs
        if config.build_settings['SDKROOT'] == 'iphonesimulator'
          config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
          config.build_settings['VALID_ARCHS'] = 'arm64 x86_64'
        end
      end
    end
    
    # Fix for modern macOS compatibility
    installer.pods_project.build_configurations.each do |config|
      # Set deployment target for the project
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
    end
  end
end
